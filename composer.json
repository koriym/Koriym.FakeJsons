{
    "name": "koriym/fake-jsons",
    "description": "Fake JSON generator by directory",
    "license": "MIT",
    "authors": [
        {
            "name": "Akihito Koriyama",
            "email": "akihito.koriyama@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "ext-json": "*",
        "leko/json-schema-faker": "dev-ref-schema",
        "justinrainbow/json-schema": "^5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.2",
        "friendsofphp/php-cs-fixer": "^2.11",
        "phpmd/phpmd": "^2.6",
        "phpstan/phpstan-shim": "^0.10"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/koriym/php-json-schema-faker"
        }
    ],
    "autoload": {
        "psr-4": {
            "Koriym\\FakeJsons\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Koriym\\FakeJsons\\": [
                "tests/",
                "tests/Fake"
            ]
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit"
        ],
        "tests": [
            "@cs",
            "vendor/bin/phpmd src,tests text ./phpmd.xml",
            "vendor/bin/phpstan analyse -l max src tests -c phpstan.neon --no-progress",
            "@test"
        ],
        "coverage": [
            "php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"
        ],
        "cs": [
            "vendor/bin/php-cs-fixer fix -v --dry-run",
            "vendor/bin/phpcs --standard=phpcs.xml src;"
        ],
        "cs-fix": [
            "vendor/bin/php-cs-fixer fix -v",
            "vendor/bin/phpcbf src tests"
        ]
    }
}
